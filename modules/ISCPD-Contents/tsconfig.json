{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"jsx": "react",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"declaration": true,
		"lib": ["es2018", "dom"],
		"types": ["react"],
		"outDir": "./dist",
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
